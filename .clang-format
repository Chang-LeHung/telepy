# This file was generated by ChatGPT.
# file: ${workspaceFolder}/.clang-format

# Based on PEP 7 and observed CPython formatting practices
BasedOnStyle: LLVM

# Indentation and formatting
IndentWidth: 4
TabWidth: 4
UseTab: Never
ContinuationIndentWidth: 4

# Braces
BreakBeforeBraces: Attach
AllowShortFunctionsOnASingleLine: Inline

# Pointer and reference alignment
PointerAlignment: Left
SpaceBeforeParens: ControlStatements

# Includes
IncludeBlocks: Preserve
SortIncludes: false

# Control flow spacing
SpacesBeforeTrailingComments: 2
AllowShortIfStatementsOnASingleLine: false

# Function declaration formatting
AlignAfterOpenBracket: Align
AlignOperands: true
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false

# Line breaks
MaxEmptyLinesToKeep: 2
ColumnLimit: 79 # CPython keeps lines under 80 chars per PEP 7

# Extra options
IndentCaseLabels: false
AlwaysBreakAfterReturnType: TopLevel
BreakConstructorInitializers: BeforeComma

# Avoid reflowing comments (CPython has lots of formatted block comments)
ReflowComments: false

# Try to preserve as much of existing formatting as possible
DerivePointerAlignment: false

AllowShortStructsOnASingleLine: Never
BinPackArguments: false
BinPackParameters: false
